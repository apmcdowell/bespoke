<div class="w-full dark:bg-neutral-900">
  <div class="w-full px-24">
    <div class="ml-4">
      <h4><%= date_formatted %></h4>
      <h1 class="text-3xl font-normal"><%= day_context %>, <%= current_user %></h1>
    </div>
    <div class="grid grid-cols-2 mt-8 gap-x-4">
      <div class="col-span-2">
        <div class="flex items-center gap-x-1">
          <div class="ml-4 px-3 py-1.5 text-sm text-emerald-900 rounded-full bg-teal-100"><span class="mr-0.5 font-bold">4</span> tasks finished</div>
        </div>
        <div class="mt-2 border-t border-neutral-200">
          <% @tasks.each do |task| %>
            <%= render 'task', task: task %>
          <% end  %>
        </div>
      </div>
      <div class="col-span-2 mt-4 p-4 border border-neutral-200 rounded-lg">
        <div class="flex">
          <div class="px-3 py-1.5 text-sm rounded-full bg-teal-100"><span class="mr-0.5 font-bold">6</span> collaborators</div>
        </div>
      </div>
    </div>
  </div>
</div>
